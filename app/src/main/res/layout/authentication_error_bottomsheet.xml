<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >


  <TextView
      android:id="@+id/title_authentication_error"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="AuthenticationFailed"
      app:layout_constraintBottom_toTopOf="@+id/authentication_error_message"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="20dp"
      android:layout_marginStart="30dp"
      android:textSize="20dp"
      style="@style/TextAppearance.AppCompat"
      app:layout_constraintVertical_chainStyle="packed"
      app:layout_constraintHorizontal_chainStyle="packed"

      />
  <TextView
      android:id="@+id/authentication_error_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Error, try again!"
      app:layout_constraintBottom_toTopOf="@+id/retry_authentication"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title_authentication_error"
      android:layout_marginBottom="50dp"
      android:layout_marginStart="30dp"
      />

  <Button
      android:id="@+id/retry_authentication"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Retry"
      style="@style/ButtonStyle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="20dp"
      />




</androidx.constraintlayout.widget.ConstraintLayout>