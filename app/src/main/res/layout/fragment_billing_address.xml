<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/payment_methods_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background_card"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:padding="16dp"
    android:theme="@style/MaterialAppTheme"
    >

  <include
      android:id="@+id/payment_methods_header"
      layout="@layout/payment_methods_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <TextView
      android:id="@+id/title"
      style="@style/BillingAddress.Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/payment_methods_header"
      android:layout_marginStart="@dimen/big_margin"
      android:layout_marginTop="@dimen/big_margin"
      android:text="@string/purchase_address_title"
      />

  <ScrollView
      android:id="@+id/info_view"
      android:layout_width="match_parent"
      android:layout_height="216dp"
      android:layout_below="@id/title"
      android:overScrollMode="never"
      android:scrollbars="none"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/content_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginEnd="@dimen/big_margin"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/address_layout"
            style="@style/BillingTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:hint="@string/purchase_address_address_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/address"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:imeOptions="flagNoExtractUi|flagNoFullscreen"
              android:maxLines="1"
              android:textSize="14sp"
              tools:text="Amphitheatre Parkway"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/number_layout"
            style="@style/BillingTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:hint="@string/purchase_address_apartment_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_layout"
            >
          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/number"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:imeOptions="flagNoExtractUi|flagNoFullscreen"
              android:inputType="number"
              android:maxLines="1"
              android:textSize="14sp"
              tools:text="36"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/city_layout"
            style="@style/BillingTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:hint="@string/purchase_address_city_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_layout"
            >
          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/city"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:imeOptions="flagNoExtractUi|flagNoFullscreen"
              android:maxLines="1"
              android:textSize="14sp"
              tools:text="Mountain View"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/zipcode_layout"
            style="@style/BillingTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:hint="@string/purchase_address_post_code_field"
            app:layout_constraintEnd_toStartOf="@id/state_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_layout"
            >
          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/zipcode"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:imeOptions="flagNoExtractUi|flagNoFullscreen"
              android:inputType="number"
              android:maxLines="1"
              android:textSize="14sp"
              tools:text="94043"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/state_layout"
            style="@style/BillingDropDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:hint="@string/purchase_address_state_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/zipcode_layout"
            app:layout_constraintTop_toTopOf="@id/zipcode_layout"
            >
          <com.google.android.material.textfield.MaterialAutoCompleteTextView
              android:id="@+id/state"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:editable="false"
              android:textSize="14sp"
              tools:text="CA"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/country_layout"
            style="@style/BillingDropDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:focusable="false"
            android:hint="@string/verification_insert_phone_field_country"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/state_layout"
            >

          <com.google.android.material.textfield.MaterialAutoCompleteTextView
              android:id="@+id/country"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:editable="false"
              android:text="US"
              android:textSize="14sp"
              />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/remember"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@color/billing_switch_color"
            android:text="@string/dialog_credit_card_remember"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/country_layout"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <ProgressBar
          android:id="@+id/progress_bar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:indeterminateDrawable="@drawable/gradient_progress"
          android:visibility="gone"
          />

    </RelativeLayout>

  </ScrollView>

  <View
      android:id="@+id/bottom_separator_buttons"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_below="@id/info_view"
      android:layout_marginTop="@dimen/big_margin"
      android:background="@color/layout_separator_color"
      />

  <include
      android:id="@+id/dialog_buy_buttons"
      layout="@layout/dialog_buy_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/bottom_separator_buttons"
      android:layout_marginTop="10dp"
      />

</RelativeLayout>
